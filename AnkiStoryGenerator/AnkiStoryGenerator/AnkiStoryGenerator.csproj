  </ItemGroup>

  <ItemGroup>
    <None Update="Prompts\TranslateStoryPrompt.sbn">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Update="Prompts\GenerateStoryPrompt.sbn">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>
